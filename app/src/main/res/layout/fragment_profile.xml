<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txtUYP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nl"
        android:text="Update Your Profile"
        android:textColor="@color/Red"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:textAlignment="center"
        />


        <TextView
            android:id="@+id/txtUName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Your Name :"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="60dp"
            />

        <EditText
            android:id="@+id/edttxtUName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:ems="15"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/txtUPhoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Your Phone No :"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="60dp"
            />

        <EditText
            android:id="@+id/edtxtUPphoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:ems="15"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:maxLength="10"
            android:inputType="number"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:id="@+id/txtUEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Your E-mail :"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="60dp"
            />

        <EditText
            android:id="@+id/edtxtUEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:ems="15"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            />


        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:layout_marginTop="30dp"
            android:text="Update" />

        <Button
            android:id="@+id/btnBecomeDonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/Dark_Red"
            android:text="Become Donor" />

        <TextView
            android:id="@+id/txtBDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Blood Donate Details"
            android:textColor="@color/Red"
            android:textSize="25dp"
            android:paddingTop="40dp"
            android:textAlignment="center"
            />


        <TextView
            android:id="@+id/txtBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Select Your Blood Group :"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="60dp"
            />

        <Spinner
            android:id="@+id/bloodGroupDropDown"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:layout_marginTop="30dp"
            />


        <TextView
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Enter Your Age :"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:id="@+id/edtxtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:ems="15"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:maxLength="2"
            android:layout_marginTop="5dp"
            android:inputType="number"
            />


        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Select Your Gender :"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            />

        <Spinner
            android:id="@+id/genderDropDown"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nb"
            />


        <TextView
            android:id="@+id/txtLastDonateDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Select Last Donate Date :"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nb"
            />

        <TextView
            android:id="@+id/txtSelectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/nb"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:text="" />

        <Button
            android:id="@+id/btnSubmitBecomeDonorDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:layout_marginTop="30dp"
            android:text="Submit Detail" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:layout_marginTop="30dp"
            android:text="Logout" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</FrameLayout>